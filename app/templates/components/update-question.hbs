{{#if updateQuestionForm}}
  <form>
    <h3>Edit</h3>
    <div class='form-group'>
      <label for="title">Title</label>
      {{input class='form-control' value=title id='title' placeholder=question.title}}
    </div>
    <div class='form-group'>
      <label for="questionby">Name</label>
      {{input class='form-control' value=questionby id='questionby' placeholder=question.questionby}}
    </div>
    <div class='form-group'>
      <label for="note">Question</label>
      {{textarea class='form-control' value=note id='note' placeholder=question.note}}
    </div>
    <button class='btn btn-info' {{action 'update' question}}>Save</button>
  </form>
{{else}}
  <button class='btn btn-warning' {{action 'updateQuestionForm' }}>Edit</button>
{{/if}}


{{yield}}
