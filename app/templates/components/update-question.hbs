{{#if updateQuestionForm}}
  <form>
    <div class='form-group'>
      <label for="title">Title</label>
      {{input value=title id='title' placeholder=question.title}}
    </div>
    <div class='form-group'>
      <label for="questionby">Name</label>
      {{input value=questionby id='questionby' placeholder=question.questionby}}
    </div>
    <div class='form-group'>
      <label for="note">Question</label>
      {{textarea value=note id='note' placeholder=question.note}}
    </div>
    <button {{action 'update' question}}>Save</button>
  </form>
{{else}}
  <button {{action 'updateQuestionForm' }}>Edit</button>
{{/if}}


{{yield}}
